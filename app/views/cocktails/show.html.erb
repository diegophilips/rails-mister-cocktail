<div class="cocktail-container">
  <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')"></div>
  <div class="cocktail-description">
    <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
      <% end %>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
